<%r = Random.new%>
<p id="notice"><%= notice %></p>

<h1>Listing Registries</h1>
<div class="row">
  <% @registries.each do |registry| %>
    <%value = r.rand(0..100)%>
    <div class="col-xs-12">
      <div class="col-xs-2">
        <%= image_tag registry.course.image,class:"center-block "%>
      </div>
      <div class="col-xs-10">
        <h2 class="text-left"><%= link_to registry.course.title, registry.course %></h2>
        <button class="btn btn-default text-right ">View </button>
        <div class="progress center-block">
          <div class="progress-bar progress-bar-striped active" role="progressbar"
            aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%=value%>%">
            <%=value%>
          </div>
        </div>
      </div>
      <!--<%= link_to 'Show', registry %>
    <%= link_to 'Edit', edit_registry_path(registry) %>
    <%= link_to 'Destroy', registry, method: :delete, data: { confirm: 'Are you sure?' } %>-->
  </div>
<% end %>
  </div>
  <br>

