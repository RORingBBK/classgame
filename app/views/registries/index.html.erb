<%r = Random.new%>
<p id="notice"><%= notice %></p>
<div class="row">
  <h1>Listing Registries</h1>
  <% @registries.each do |registry| %>
    <%value = r.rand(0..100)%>
      <div class="col-xs-2">
        <%= image_tag registry.course.image,class:"center-block"%>
      </div>
      <div class="col-xs-10">
        <%=link_to "Continue",registry.course, class:"btn btn-success pull-right"%>
        <h2 class="text-left"><%= registry.course.title%></h2>
        <div class="progress center-block">
          <div class="progress-bar progress-bar active" role="progressbar"
            aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%=value%>%">
            <%=value%>
          </div>
        </div>
      </div>
      <!--<%= link_to 'Show', registry %>
    <%= link_to 'Edit', edit_registry_path(registry) %>
    <%= link_to 'Destroy', registry, method: :delete, data: { confirm: 'Are you sure?' } %>-->
  <% end %>
</div>
