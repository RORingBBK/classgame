<div class="container">
  <div class="col-lg-9">
    <p id="notice"><%= notice %></p>
    <div class="row list_itens_center">
      <h1>Meus Cursos</h1>

      <% @courses.each do |course| %>
        <div class="col-lg-4">
          <figure>
            <%= image_tag course.image, class: "image_radius" %>
            <figcaption>
              <h2 class=""><%= course.title%></h2>
              <% if course.progress_percentage == 100 %>
                <div class="progress progress-background">
                  <div class="progress-bar progress-bar active done" role="progressbar"aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%= course.progress_percentage%>%">
                  </div>
                </div>
              <% else %>
                <div class="progress progress-background">
                  <div class="progress-bar progress-bar active" role="progressbar"aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%= course.progress_percentage%>%">
                  </div>
                </div>
              <% end %>  
            </figcaption>
            <%= link_to "Continue", course, class: " btn btn-default" %>
          </figure>
        </div>
      <% end %>

    </div>
  </div>

  <div class="col-lg-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Rank</h3>
      </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Usu√°rio</th>
            <th>XP</th>
          </tr>
        </thead>
        <tbody>
          <% i = 0 %>
          <% @users.each do |user| %>
            <% i = i + 1 %>
            <tr>
              <th scope="row"><%= i %></th>
              <td>
                <%= image_tag user.avatar.url(:medium), class:"image-user" %>
                <!-- <img "img-circle" width="20px" height="20px" src="<%=user.image%>" alt="" /> -->
                <p><%= user.name %></p>
              </td>
              <td><%= user.performance.total_experience %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>