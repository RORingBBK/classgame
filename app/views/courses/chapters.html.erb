<%- model_class = Chapter -%>
  <% @chapters.each do |chapter| %>
    <div class="bs-callout bs-callout-primary">
      <h4>MÃ³dulo <%= chapter.id %> - <%= chapter.title %></h4>
      <%= chapter.description %>
    </div>
    <ul>
      <% chapter.all_contents.each do |content|%>  
        
        <%if content.class.table_name == 'texts'%>  
          <form action="<%= contents_path %>" method="get" data-remote="true">
            <input type="hidden" name="text[id]" value="<%=content.id%>">
            <li><%= content.title%></li>
            <input type="submit" class="" data-toggle="modal" data-target="#myModal">
          </form>
        <%end%>
        
        <%if content.class.table_name == 'videos'%>  
          <form action="<%= contents_path %>" method="get" data-remote="true">
            <input type="hidden" name="video[id]" value="<%=content.id%>">
            <li><%= content.title%></li>
            <input type="submit" class="" data-toggle="modal" data-target="#myModal">
          </form>
        <%end%>

        <%if content.class.table_name == 'exercises'%>  
          <form action="<%= contents_path %>" method="get" data-remote="true">
            <input type="hidden" name="exercise[id]" value="<%=content.id%>">
            <li><%= content.title%></li>
            <input type="submit" class="" data-toggle="modal" data-target="#myModal">
          </form>
        <%end%>
      
      <%end%>
    </ul>
  <% end %>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <div id="text" class="text"></div>
        <div class="video" width="100%"></div>
        <div class="exercise"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#myModal').on('shown.bs.modal', function () {
    $(".modal-footer").parent()
  })

  
</script>