<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :nivel %>

    <%= f.input :workload %>

    <%= f.input :active %>

    <%= f.input :completed_edition %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
