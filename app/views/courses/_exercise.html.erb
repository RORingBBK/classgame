<h2 class="survey-title">
  <%= @exercise.title %>
</h2>
<%= simple_form_for @exercise, url:attempts_create_path, action:"create", method:"POST" do |exercise| %>
  <ol class="questions">
    <% exercise.object.questions.each do |question| %>
      <li>
        <p class="question"> <%= question.description %></p>
        <ul>
        <%= collection_radio_buttons 'question[alternative_attributes]', question.id, question.alternatives, :id, :description do |b|%>
          <li class="radio">
            <%= b.label { b.radio_button + b.text }  %>
          </li>
        <% end %>
        </ul>
      </li>
    <% end %>
  </ol>
