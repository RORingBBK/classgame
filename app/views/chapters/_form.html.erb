<%= simple_form_for @chapter, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= error_span(@chapter[:title]) %>
  <%= f.input :description %>
  <%= error_span(@chapter[:description]) %>
  <%= f.input :experience %>
  <%= error_span(@chapter[:experience]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                chapters_path, :class => 'btn btn-default' %>
<% end %>
