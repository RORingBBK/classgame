<%- model_class = Chapter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:experience) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= link_to chapter.id, chapter_path(chapter) %></td>
        <td><%= chapter.title %></td>
        <td><%= chapter.description %></td>
        <td><%= chapter.experience %></td>
        <td>
          <%= link_to 'Editar', edit_chapter_path(chapter), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Deletar', chapter_path(chapter), :method => :delete,
                                                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                                        :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo', new_chapter_path, :class => 'btn btn-primary' %>
